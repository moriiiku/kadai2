<h2>Editing Book</h2>

<% if @book.errors.any? %>
  <div class="alert alert-warning">
     <h2><%= @book.errors.count %>error prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>




<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
	<h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    	<%= f.text_area :body %>

    <div>
    	<%= f.submit 'Update Book' %>
	</div>

	<div>
    <%= link_to "Show", book_path(@book) %>


    <a class="back" href="/books">Back</a>
    </div>


<% end %>