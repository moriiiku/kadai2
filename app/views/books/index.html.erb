<h1>Books</h1>


<table>

<tr>

<th><font>Title</font></th>
<th><font>Body</font></th>
</tr>
<% @books.each do |book| %>
<tr>
<td> <span><%= book.title %></span></td>
<td><span><%= book.body %></span></td>

<td><%= link_to "Show", book_path(book.id) %></td>
<td><%= link_to "Edit", edit_book_path(book.id) %>
  <%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %>
<% end %>
</td>
</tr>
</table>



<h2>New book</h2>
 <p id="notice"><%= notice %></p>

<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <h2><%= @book.errors.count %>error prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book) do |f| %>
  <div><h4>Title</h4>
    <%= f.text_field :title %>
  </div>

    <div>
    <h4>Body</h4>
      <%= f.text_area :body %>
    </div>
    <div>
      <%= f.submit 'Create Book' %>
    </div>
<% end %>

